db:
  host: "{{ misskey_database_hostname }}"
  port: {{ misskey_database_port }}

  # Database name
  # You can set db from an environment variable instead.
  db: "{{ misskey_database_name }}"

  # Auth
  # You can set user and pass from environment variables instead.
  user: "{{ misskey_database_username }}"
  pass: "{{ misskey_database_password }}"

  # Whether disable Caching queries
  #disableCache: true

  # Extra Connection options
  extra:
    ssl: {{ misskey_database_ssl | to_json }}

dbReplications: {{ misskey_database_replications | to_json }}

